{% macro resume_subsection(heading) -%}
    <div class="resume-sub-section">
        {% if heading %}
            <div class="heading">{{ heading }}</div>
        {% endif %}

        {% if caller -%}
            {{ caller() }}
        {% endif %}
    </div>
{%- endmacro %}

{% macro labelled_desc(label,timeframe,sublabel) %}
    <div class="labelled-desc">
        {% if label %}
            <div class="label-ld">{{label}}</div>
        {% endif %}

        {% if timeframe %}
            <div class="timeframe">{{timeframe}}</div>
        {% endif %}

        {% if sublabel %}
            <div class="sub-label">{{sublabel}}</div>
        {% endif %}

        {% if caller %}
            {{ caller() }}
        {% endif %}
    </div>
{% endmacro %}


