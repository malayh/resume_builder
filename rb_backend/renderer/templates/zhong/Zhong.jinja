<!DOCTYPE html>
<html lang="en">
<head>    
    {%- for i in css %}
        <link rel="stylesheet" href="{{ i }}">
    {%- endfor %}
</head>
<body>  
    <div class="" id="main">
        <div class="" id="content-section">
            {% call resume_subsection() %}
                <div class="user-name">{{username}}</div>
                <div class="user-profile">{{jobprofile}}</div>
                {% if profilesummary %}
                    <div class="profile-summary">{{profilesummary}}</div>
                {% endif %}
            {% endcall %}

            {% for ss in main_section %}
                {% call resume_subsection(ss["title"]) %}
                    {% for ld in ss["labelled-descs"] %}
                        {% call labelled_desc(ld["label"],ld["timeframe"],ld["sub-label"]) %}
                            {% if ld["descs"]|length > 0 %}
                                <ul>
                                    {% for d in ld["descs"] %}
                                        <li class="desc">{{d}}</li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        {% endcall %}
                    {% endfor %}
                {% endcall %}
            {% endfor %}
        </div>

        <div class="" id="sidebar-section">
            {% for ss in sidebar %}
                {% call resume_subsection(ss["title"]) %}
                    
                    {% if ss["contacts"]|length > 0 %}
                        {% for i in ss["contacts"] %}
                            <div class="labelled-info">
                                {{ get_label(i["label"]) }}
                                <div class="info">{{ i["value"] }}</div>                               
                            </div>
                        {% endfor %}
                    {% endif %}

                    {% if ss["skills"]|length > 0 %}
                        <div class="skill-section">
                            {% for i in ss["skills"] %}
                                <div class="skill-item">{{i}}</div> 
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endcall %}
            {% endfor %}

        </div>
    </div>
</body>
</html>